rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Subcollection: job_profiles
      match /job_profiles/{profileId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Jobs collection: readable by all authenticated users
    match /jobs/{jobId} {
      allow read: if request.auth != null;
      allow write: if false; // Only backend writes jobs
    }

    // User job matches: users can read/write their own matches
    match /user_job_matches/{matchId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}